<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="wg_blob_data">
	<insert id="insert">
		insert into wg_blob_data(name,content)
		values(#{name},#{content, jdbcType=BLOB })
	</insert>
	
	<resultMap type="com.harmony.wenguang.dao.dataobject.WgBlobDataDO" id="getDataResult">
		<result column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="content" property="content" jdbcType="BLOB" typeHandler="org.apache.ibatis.type.BlobTypeHandler"/>
	</resultMap>
	<select id="getData" resultMap="getDataResult">
		select id,name,content from wg_blob_data
		where id = #{id}
	</select>
	
</mapper>